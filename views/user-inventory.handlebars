<div style="visibility:hidden">
        <section class="header-top">
            <h3>Search</h3>
            <input id="search-input" type="text">
            <button id="search-button"></button>
            <a id="facebook-link" href="https://facebook.com">FaceBook</a>
            <button onclick='window.location.href="http://localhost:3001/user/login"'>Login</button>
            <button onclick='window.location.href="http://localhost:3001/user/signup"'>SignUp</button>
            {{#if logged_in}}
            <h1>Logged In:</h1>
            <h1 id="username">{{user.username}}</h1>
            {{/if}}
        </section>

        <section class="header-bar">
            <Button onclick='window.location.href="http://localhost:3001/user"' class="header-button">Home</Button>
            <Button onclick='window.location.href="http://localhost:3001/user/inventory"' class="header-button">View Used Cars</Button>
            <Button onclick='window.location.href="http://localhost:3001/user/about"' id="aboutus-select">About Us</Button>
            <button onclick='window.location.href="http://localhost:3001/user/review"' id="review-select">Reviews</button>
        </section>
</div>
<section class="big-inventory">
    <section>
    {{#each cars as |car|}} 
    <section class="car-container">
        <article class="car-title">
            
        </article>
        <article class="car-holder">
            <article class="car-image-holder">
                <a href="/user/inventory/{{car.id}}">
                    <img style="width: 800px;" class="car-image" src="
                    {{#if car.image}}
                          {{car.image}}
                    {{else if car.url}}
                          {{car.url}}
                    {{else}}
                          ../css/images/carImage.jpg
                    {{/if}}" alt="Car image">
                </a>
            </article>
            <article class="inventory-holder">
                <article class="car-info-holder">
                    <h2>{{car.car_year}} {{car.make}} {{car.model}} {{car.trim}}</h2>
                </article>
                <article class="car-price-holder">
                    <h2>Mileage: {{car.mileage}}</h2>
                    <h2>Price: {{car.price}}</h2>
                </article>
            </article>
        </article>
    </section>
    {{/each}}
    </section>
    <section class="inventory-sidebar">
        <article>
            <h2>Recently Viewed Cars</h2>
        </article>
    {{#each newStorageCars as |newStorageCar|}}  
        <article class="recent-car-storage">
            <h1>{{newStorageCar.make}} {{newStorageCar.model}}</h1> 
            <div class="recent-image">
                <a class="recent-car-image" href="/user/inventory/{{newStorageCar.id}}">
                    <img  src="
                {{#if newStorageCar.image}}
                      {{newStorageCar.image}}
                {{else if newStorageCar.url}}
                      {{newStorageCar.url}}
                {{else}}
                        ../css/images/carImage.jpg
                {{/if}}" alt="Car image">
                </a>
            </div>
        </article>
    {{/each}}
    </section>
</section>
<script>
    if(performance.navigation.type == 2){
   location.reload(true);
}
</script>